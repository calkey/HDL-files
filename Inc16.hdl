/**
 * 16-bit incrementer: out = x + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN x[16];
    OUT out[16];

    PARTS:
    Add16(x=x[0..15], y[0]=true, y[1..15]=false, out=out[0..15]);

}
